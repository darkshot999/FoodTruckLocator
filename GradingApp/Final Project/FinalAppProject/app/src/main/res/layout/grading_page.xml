<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Grading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/ColumnID"
        android:text="Colum ID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/ColumnID"
        android:layout_alignParentStart="true"
        android:id="@+id/Grade"
        android:text="Grade" />

    <Button
        android:text="View students"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/viewStudentsGC" />

    <Button
        android:text="Add grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/viewStudentsGC"
        android:layout_toEndOf="@+id/textView"
        android:id="@+id/updateGrade" />

    <Button
        android:text="Grade calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goToFinal"
        android:layout_below="@+id/viewStudentsGC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />
</RelativeLayout>